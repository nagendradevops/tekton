--- 
apiVersion: ocs.openshift.io/v1
kind: StorageCluster
metadata: 
  name: ocs-storagecluster
  namespace: openshift-storage
spec: 
  manageNodes: false
  monPVCTemplate: 
    spec: 
      accessModes: 
        - ReadWriteOnce
      resources: 
        requests: 
          storage: 10Gi
      storageClassName: gp2-csi
      volumeMode: Filesystem
  storageDeviceSets: 
    - count: 1
      dataPVCTemplate: 
        spec: 
          accessModes: 
            - ReadWriteOnce
          resources: 
            requests: 
              storage: 0.5Ti
          storageClassName: gp2-csi
          volumeMode: Block
      name: ocs-deviceset
      placement: {}
      portable: true
      replica: 3
      resources: {}
